<resources>

    <!-- Base application theme.Theme.AppCompat.Light.DarkActionBar -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/OpenCloseAnimation</item>
    </style>

    <style name="PopupAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="OpenCloseAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_hold</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_hold</item>
        <item name="android:activityCloseExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="test_theme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowAnimationStyle">@style/PopupAnimation</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- 无标题、无双重白色背景、内容居中的dialog,一般使用Theme.Holo.Dialog为默认主题，灰白色的进度条 -->
    <style name="AppTheme.Dialog.NoTitleAndBackGround" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

</resources>
